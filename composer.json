{
    "name": "papac/bow",
    "description": "The bow Framework",
    "keywords": ["framework", "bow", "php", "php-framework"],
    "type": "project",
    "require": {
        "php": ">=5.6",
        "papac/framework": "1.*",
        "psy/psysh": "@stable"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Franck DAKIA",
            "email": "dakiafranck@gmail.com",
            "role": "Lead developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "files": [
            "config/helper.php"
        ]
    },
    "scripts": {
        "post-create-project-cmd": [
            "php bow generate:key"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
